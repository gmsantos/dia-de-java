<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Servlet Sample</display-name>

  <servlet>
    <servlet-name>HelloWorld</servlet-name>
    <servlet-class>br.ufscar.servlet.HelloWorldServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>Inscricao</servlet-name>
    <servlet-class>br.ufscar.servlet.Inscricao</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>Minicurso</servlet-name>
    <servlet-class>br.ufscar.servlet.Minicurso</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>InscricaoJsp</servlet-name>
    <jsp-file>/jsp/inscricao.jsp</jsp-file>
  </servlet>

  <servlet>
    <servlet-name>MinicursoJsp</servlet-name>
    <jsp-file>/jsp/minicurso.jsp</jsp-file>
  </servlet>

  <servlet-mapping>
    <servlet-name>HelloWorld</servlet-name>
    <url-pattern>/HelloWorld</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>InscricaoJsp</servlet-name>
    <url-pattern>/inscricao</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>MinicursoJsp</servlet-name>
    <url-pattern>/minicurso</url-pattern>
  </servlet-mapping>
</web-app>
